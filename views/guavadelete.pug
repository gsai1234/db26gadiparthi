extends layout
block content
 h1= title
 if (toShow == null)
   h2 No instance to delete
 else
  - let guavaid = toShow._id
  - let guava_type = toShow.guava_type
  - let guavaweight = toShow.weight
  - let guavacost = toShow.cost
  - let actionid = "/resource/guavas/" + guavaid
  script let actionid = "#{actionid}"
  div
    div.row
     div(class='guavaAttr mr-3') guava ID is:
     div #{guavaid}
    div.row
     div(class='guavaAttr mr-3') guava Type is:
     div #{guava_type}
    div.row
     div(class='guavaAttr mr-3') guava height is:
     div #{guavacost}
    div.row
     div(class='guavaAttr mr-3') guava price is:
     div #{guavaweight}
 button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
 button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
 script.
  function cancel() {
  // Go back to the home page for the guava collection
  window.location.href='/guavas'
  }
 script.
  function deleteOnid() {
   console.log("starting delete")
   // delete first
   fetch(actionid, {
   method: 'DELETE' // Don't need a body for the delete
   }).then((resp) => {
   return resp.json(); // or resp.text() or whatever the server sends
   }).then((body) => {
   alert("Delete succeded")
   window.location.href='/guavas'
   // TODO handle body
   }).catch((error) => {
   // TODO handle error
   alert("Delete failed " + error )
   });
  }